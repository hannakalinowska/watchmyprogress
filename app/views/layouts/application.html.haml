<!DOCTYPE html>
%html
  %head
    %title
      WatchMyProgress
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    %div#header
      %h2
        WatchMyProgress
      %div.menu
        = link_to 'Home', root_path
        = link_to 'My Account', '#'
        = link_to 'Logout', '#'
      %div.new_project
        = link_to 'New Project', new_project_path
      %h1
        Dashboard

    %div.flash_messages
      - if flash[:notice]
        %div.notice
          = flash[:notice]
      - if flash[:error]
        %div.error
          = flash[:error]

    %div#content
      = yield
