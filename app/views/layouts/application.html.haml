<!DOCTYPE html>
%html
  %head
    %title
      WatchMyProgress
    = include_javascripts :lib
    = include_javascripts :common
    = include_stylesheets :lib
    = include_stylesheets :common
    = stylesheet_link_tag '/stylesheets/lib/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag '/stylesheets/lib/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag '/stylesheets/lib/ie.css', :media => 'screen, projection'
    = csrf_meta_tag

  %body
    %div#wrapper
      %div#header
        %h2
          = link_to 'WatchMyProgress', projects_path
        %div.menu
          = link_to 'Home', root_path
          = link_to 'My Account', '#'
          = link_to 'Logout', '#'

      %div.flash_messages
        - if flash[:notice]
          %div.notice
            = flash[:notice]
        - if flash[:error]
          %div.error
            = flash[:error]

      %div#content
        = yield

      %div.remote_container{:style => 'display:none'}
